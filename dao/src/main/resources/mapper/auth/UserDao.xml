<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <!-- 新增用户 -->
    <insert id="saveU" parameterType="pd" flushCache="false">
        insert into USER (
        id,
        code,
        name,
        pwd
        ) values (
        #{id},
        #{code},
        #{name},
        #{pwd}
        )
    </insert>

    <update id="updateUser" parameterType="User">
        UPDATE user u set u.psw=#{psw} WHERE u.name=#{name}
    </update>
    
    <resultMap id="selectReturnType" type="User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="psw" column="psw"/>
    </resultMap>
    
    <select id="findUserByName" parameterType="java.lang.String" resultMap="selectReturnType">
        SELECT *  FROM user u WHERE u.name = #{name}
    </select>

    <select id="findUserById" parameterType="int" resultType="User">

        SELECT * FROM  user WHERE id=#{id}
       <!-- <if test="id != null">
            and id=#{id}
        </if>
        <if test="name != null">
            and name=#{name}
        </if>-->

    </select>

</mapper>